<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context="com.example.alex.raihere.registro">

    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="140dp"
        android:textColor="#FFFFFF"

        />
    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/name"
        android:layout_toLeftOf="@+id/txtNombre"
        android:layout_above="@+id/edtNombre"

        />

    <EditText
        android:id="@+id/edtNombre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtNombre"
        android:singleLine="true"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:textColor="#BBDEFB"

        />
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="150dp"
        android:layout_below="@id/edtNombre"
        android:textColor="#FFFFFF"
        />
    <ImageView
        android:id="@+id/imgEmail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/email"
        android:layout_toLeftOf="@+id/txtEmail"
        android:layout_above="@+id/edtEmail"
        />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/txtEmail"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textColor="#BBDEFB"
        />


    <TextView
        android:id="@+id/txtContraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="90dp"
        android:layout_below="@id/edtEmail"
        android:textColor="#FFFFFF"
        />
    <ImageView
        android:id="@+id/imgContraseña"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pass"
        android:layout_toLeftOf="@+id/txtContraseña"
        android:layout_above="@+id/edtContraseña"
        />

    <EditText
        android:id="@+id/edtContraseña"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/txtContraseña"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:password="true"
        android:textColor="#BBDEFB"
        />
    <TextView
        android:id="@+id/txtContraseña2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="90dp"
        android:layout_below="@id/edtContraseña"
        android:textColor="#FFFFFF"
        />
    <ImageView
        android:id="@+id/imgContraseña2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/pass2"
        android:layout_toLeftOf="@+id/txtContraseña2"
        android:layout_above="@+id/edtContraseña2"
        />

    <EditText
        android:id="@+id/edtContraseña2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_below="@+id/txtContraseña2"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:password="true"
        android:textColor="#BBDEFB"
        />

    <Button
        android:id="@+id/btnIngresar"
        android:text="Login"
        android:onClick="entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        android:background="@drawable/custom_button"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
