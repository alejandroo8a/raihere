<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.alex.raihere.mis_datos">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imgperfildatos"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtnombredatos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:text="Nombre:"
                            android:textColor="@android:color/black"

                            />
                        <EditText
                            android:id="@+id/edtnombredatos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"

                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txttel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:layout_marginLeft="15dp"
                            android:text="Télefono:"
                            android:textColor="@android:color/black"

                            />
                        <EditText
                            android:id="@+id/edttel"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:textSize="15dp"
                            android:inputType="number"

                            />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/txtvehiculo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="15dp"
                        android:layout_marginLeft="15dp"
                        android:text="Vehiculo:"
                        android:textColor="@android:color/black"

                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <RadioGroup
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/chksi"
                                android:layout_marginLeft="15dp"
                                android:button="@drawable/boton_checkbox"
                                android:text="Si"
                                android:textSize="15dp"
                                />
                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/chkno"
                                android:button="@drawable/boton_checkbox"
                                android:layout_marginLeft="15dp"
                                android:text="No"
                                android:textSize="15dp"
                                />

                        </RadioGroup>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btncambiarfoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cambiar foto"
                android:enabled="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/custom_button"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2196F3"
                android:id="@+id/desaparecer"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehiculo."
                    android:textSize="20dp"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:layout_marginLeft="15dp"/>

                <Button
                    android:id="@+id/btnguardar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Guardar"
                    android:background="@drawable/custom_button"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="35dp"
                    />
            </LinearLayout>

                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marca:"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="invisible"
                    />
                <EditText
                    android:id="@+id/edtmarca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:visibility="invisible"
                    />

                <TextView
                    android:id="@+id/txtmo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modelo:"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="30dp"
                    android:visibility="invisible"
                    />
                <EditText
                    android:id="@+id/edtmodelo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Malibu"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:singleLine="true"
                    android:maxLength="20"
                    android:visibility="invisible"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Año:"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"
                    android:visibility="invisible"
                    />
                <EditText
                    android:id="@+id/edtaño"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="2016"
                    android:textSize="15dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="17dp"
                    android:maxLength="4"
                    android:phoneNumber="true"
                    android:visibility="invisible"
                    />
                <com.rey.material.widget.ProgressView
                    android:id="@+id/progresDatos"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    app:pv_autostart="true"
                    app:pv_circular="true"
                    app:pv_progressStyle="@style/Material.Drawable.CircularProgress"
                    android:layout_gravity="center"
                    android:layout_marginLeft="60dp"
                    app:pv_progressMode="indeterminate"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/imgMisdatos"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:visibility="invisible"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnagregarfoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cambiar foto"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/custom_button"
                    android:textColor="#FFFFFF"
                    android:visibility="invisible"
                    android:enabled="false"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/btnguardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:background="@drawable/custom_button"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                android:visibility="invisible"
                />
        </LinearLayout>
    </ScrollView>

</FrameLayout>
